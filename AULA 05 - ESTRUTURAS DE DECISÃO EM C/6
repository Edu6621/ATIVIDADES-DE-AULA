/* 6. Escreva um programa em C que leia uma letra e indique se ela Ã© uma vogal ou consoante. Utilize
uma estrutura de caso para resolver este problema. */
#include <stdio.h>
#include <ctype.h>
int main (){
    char a1;
    printf ("informe uma letra : ");
    scanf ("%c", &a1);
    if (isalpha(a1)){
        switch (a1){
            case 'a':
                printf ("vogal");
                return 0;
            case 'e':
                printf ("vogal");
                return 0;
            case 'i':
                printf ("vogal");
                return 0;
            case 'o':
                printf ("vogal");
                return 0;
            case 'u':
                printf ("vogal");
                return 0;
            default:
                printf ("consoante");
                break;
    
            }
    }
    else{
        printf ("ERRO");
    }
}
